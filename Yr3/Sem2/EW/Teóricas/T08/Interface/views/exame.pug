extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Exam Record: #{e.id}
        
    .w3-container
        ul.w3-ul.w3-card-4
            li #[b Nome:] #{e.nome.primeiro} #{e.nome.último}
            li #[b Índice:] #{e.index}
            li #[b Idade:] #{e.idade}
            li #[b Género:] #{e.género}
            li #[b Morada:] #{e.morada}
            li #[b Modalidade:] #{e.modalidade}
            li #[b Clube:] #{e.clube}
            li #[b Email:] #{e.email}
            li #[b Federado:] #{e.federado}
            li #[b Resultado:] #{e.resultado}

    footer.w3-container.w3-teal 

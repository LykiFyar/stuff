extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Student Record: #{a.id}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
            li #[b Nome:] #{a.nome}
            li #[b NÃºmero:] #{a.id}
            li #[b Git (link):]
                a(href=a.gitlink) #{a.gitlink}
            .w3-container 
              fieldset.w3-margin 
                legend TPC 
                each val in [1, 2, 3, 4, 5, 6, 7, 8]
                    if a['tpc'+val] 
                        input.w3-check(type="checkbox" name="tpc"+val value="1" checked)
                        label= "TPC" + val
                    else
                        input.w3-check(type="checkbox" name="tpc"+val value="1")
                        label= "TPC" + val

    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]




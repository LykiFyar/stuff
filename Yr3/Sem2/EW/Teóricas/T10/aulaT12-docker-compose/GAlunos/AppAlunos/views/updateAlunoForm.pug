extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-purple
            h2 Student Form Update
        form.w3-container(method="POST" action="/alunos/edit")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" value=a.id readonly)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=a.nome)
                label Git
                input.w3-input.w3-round(type="text" name="gitlink" value=a.gitlink)
                
            fieldset
                legend TPC
                each i in [1,2,3,4,5,6,7,8]
                    if a["tpc"+i]
                        input.w3-check(type="checkbox" name="tpc"+i value="1" checked)
                        label TPC#{i}
                    else
                        input.w3-check(type="checkbox" name="tpc"+i value="1")
                        label TPC#{i}
                        
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Update
               
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]
                
            
            </div>
extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Student Form Update
        
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="_id" readonly value=a._id)
                label Name
                input.w3-input.w3-round(type="text" name="nome" value=a.nome)
                label Git
                input.w3-input.w3-round(type="text" name="gitlink" value=a.gitlink)

            fieldset
                legend TPC 

                each val in [1, 2, 3, 4, 5, 6, 7, 8]
                    if a['tpc'+val] 
                        input.w3-check(type="checkbox" name="tpc"+val value="1" checked)
                        label= "TPC" + val
                    else
                        input.w3-check(type="checkbox" name="tpc"+val value="1")
                        label= "TPC" + val
                        
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Update

        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]

extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Student Delete Form
        
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=a.id)
                label Name
                input.w3-input.w3-round(type="text" name="nome" readonly value=a.nome)
                label Git
                input.w3-input.w3-round(type="text" name="gitlink" readonly value=a.gitlink)
        
        button.w3-btn.w3-purple.w3-mb-2
            a(href="/alunos/deleteConfirm/" + a.id) Delete
        button.w3-btn.w3-purple.w3-mb-2
            a(href="/") Cancel

        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]

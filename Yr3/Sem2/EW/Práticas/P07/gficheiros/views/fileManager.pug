extends layout 

block content 
    .modal(id='display')
    .w3-card-4.w3-margin
        header.w3-amber 
            h2.w3-margin File Upload 
        form.w3-container(action='/files' method='POST' enctype='multipart/form-data')
            label.w3-text-orange
                b Select file
            input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type='file' name='myFile')
            label.w3-text-orange
                b Description
            input.w3-input.w3-border.w3-round.w3-margin.w3-light-grey(type='text' name='desc')
            input.w3-btn.w3-margin.w3-orange(type='submit' value='Send')
    .w3-card-4.w3-margin
        header.w3-amber
            h2.w3-margin File List 
        .w3-container 
            table.w3-table-all 
                tr 
                    th Date
                    th File
                    th Size
                    th Type
                each f in files
                    tr(onclick='showFile(\"' + f.name + '\",\"' + f.mimetype + '\")')
                        td= f.date
                        td= f.name 
                        td= f.size
                        td= f.mimetype 
    .footer.w3-container.w3-amber
        address Generated by upload-single::EngWeb2023 #{d}
            
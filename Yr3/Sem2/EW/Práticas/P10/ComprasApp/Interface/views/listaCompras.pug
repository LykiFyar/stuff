extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1= list.designacao
      h2= list.data
    .w3-container
      table.w3-table-all
        tr
          th Designação
          th Categoria
          th Quantidade
          th Unidade 
          th Operações
          th Debug
        
        each p in list.produtos
          tr
            td= p.designacao
            td= p.categoria
            td= p.quantidade.valor
            td= p.quantidade.unidade
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="#") C
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="#") U 
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/lista/" + list._id +"/deleteProduto/" + p._id) D


            td= JSON.stringify(p)
              
    footer.w3-container.w3-teal
      h5 Generated by shopList::EngWeb2023 in #{d}

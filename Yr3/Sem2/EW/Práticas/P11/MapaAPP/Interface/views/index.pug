extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Mapa Virtual
    .w3-container
      table.w3-table-all
        tr
          th ID
          th Nome
          th Distrito
          th População 
        each c in cidades
          tr
            td= c._id
            td 
              a(href='/'+c._id)=c.nome 
            td= c.distrito
            td= c.população
    footer.w3-container.w3-teal
      h5 Generated by MapaVirtual::EngWeb2023 in #{d}
extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1= cidade.nome
      h2= cidade._id
    .w3-container
      table.w3-table-all
        tr
          th Distrito
          th População
          th Descrição
        tr
          td= cidade.distrito 
          td= cidade.população
          td= cidade.descrição
    .w3-container
      h3 Ligações
      table.w3-table-all
        tr
          th ID
          th Origem
          th Destino 
          th Distância
        each l in caminhos
          tr
            td= l._id
            td
              a(href="/"+l.origem)= l.origem
            td
              a(href="/"+l.destino)= l.destino
            td= l.distância
    footer.w3-container.w3-teal
      h5 Generated by MapaVirtual::EngWeb2023 in #{d}
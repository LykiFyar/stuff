extends layout

block content
  .w3-card-4 
    header.w3-container.w3-orange
      h1 Autenticação básica com NodeJS
    .w3-container
      if u
        p Olá #{u.name}
      else
        p Bem-vindo convidado!
      p Podes fazer as seguintes operações
        ul.w3-ul 
          li 
            a(href='/login') Login
          li 
            a(href='/logout') Logout
          li 
            a(href='/register') Register
          li 
            a(href='/protegida') Only for authorized users
    footer.w3-container.w3-orange 
      address Generated by NodeJS auth demo
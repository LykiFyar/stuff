extends layout

block content
    .w3-card-4 
        header.w3-container.w3-purple 
            h2 Confirm Student Deletion

        .w3-container
            ul.w3-ul.w3-card-4
                li #[b ID: ] #{a.id}
                li #[b Nome: ] #{a.nome}
                li #[b Git Link: ] #[a(href=a.gitlink)= a.gitlink]

            a(href="/alunos/delete/" + a.id + "/confirm")
                button.w3-btn.w3-red.w3-mb-2.w3-round.w3-margin Confirm
            a(href="/")
                button.w3-btn.w3-gray.w3-mb-2.w3-round.w3-margin Cancel
        
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]